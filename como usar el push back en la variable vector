#include <iostream>     // Para usar cout y cin
#include <vector>       // Para usar vectores
using namespace std;

int main() {
    vector<float> pesos;  // 1Ô∏è‚É£ Creamos un vector vac√≠o que guardar√° pesos
    int cantidad;         // 2Ô∏è‚É£ Aqu√≠ vamos a guardar cu√°ntas personas hay
    float peso;           // 3Ô∏è‚É£ Esta variable guarda cada peso temporalmente

    // 4Ô∏è‚É£ Pedimos al usuario cu√°ntas personas hay
    cout << "¬øCu√°ntas personas hay? ";
    cin >> cantidad;

    // 5Ô∏è‚É£ Repetimos la entrada 'cantidad' de veces
    for (int i = 0; i < cantidad; i++) {
        cout << "Ingresa el peso de la persona " << i + 1 << ": ";
        cin >> peso;

        // 6Ô∏è‚É£ Guardamos el peso en el vector
        pesos.push_back(peso);  // üëà Aqu√≠ se ejecuta push_back cada vez
    }

    // 7Ô∏è‚É£ Mostramos los pesos guardados
    cout << "\nLista de pesos ingresados:\n";
    for (int i = 0; i < pesos.size(); i++) {
        cout << "Persona " << i + 1 << ": " << pesos[i] << " kg" << endl;
    }

    return 0;
}
