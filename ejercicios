#include <iostream>
using namespace std;
int main() {
	int  a, b;
	cout << "Ingrese el primer numero ";cin >> a;
	cout << "Ingrese el segundo numero ";cin >> b;
	if (a > b) {
		cout << "El mayor numero es : " << a << endl;
	}
	else if (a < b) {
		cout << "El mayor numero es : " << b << endl;
	}
	else {
		cout << "Los numeros son iguales" << endl;
	}

}
